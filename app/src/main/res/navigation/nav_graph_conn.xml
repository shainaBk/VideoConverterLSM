<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.mobiledevices.videoconverter.ui.activity.connection.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mobiledevices.videoconverter.ui.activity.connection.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_applicationActivity"
            app:destination="@id/applicationActivity" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.mobiledevices.videoconverter.ui.activity.connection.SignupFragment"
        android:label="fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_applicationActivity"
            app:destination="@id/applicationActivity" />
    </fragment>
    <activity
        android:id="@+id/applicationActivity"
        android:name="com.mobiledevices.videoconverter.ui.activity.application.ApplicationActivity"
        android:label="activity_application"
        tools:layout="@layout/activity_application" />
</navigation>